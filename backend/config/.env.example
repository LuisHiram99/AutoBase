# Database configuration
# Railway provides DATABASE_URL automatically when you connect a database
DATABASE_URL=postgresql+asyncpg://username:password@host:port/database

# Alternative database configuration (if DATABASE_URL is not set)
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=talleres_db
DB_NAME_TEST=talleres_test_db

# Application Configuration
PORT=8000
ENVIRONMENT=production
ALGORITHM=HS256
SECRET_KEY=your-secret-key-here

# Add other environment variables here as needed